//this for loop allows the counter to start at 70 and end at 110 by increasing by +1 every increment

for (let counter = 70; counter < 111; counter++) {
  console.log(counter)
}


//this for prints 'I would love to visit ' + vacationSpots[i] through Arrays in a for Loop

const vacationSpots = ['Bali', 'Paris', 'Tulum'];

for (let i = 0; i < vacationSpots.length; i++) {
  console.log('I would love to visit ' + vacationSpots[i]);
}

//an example of a Nested Loop, tinasFollowers is nested inside bobsFollowers and therefore mutualFollowers is the output of bob's and tina's mutual friends

const bobsFollowers = ['Jake','Alan','Alex','Bernie'];
const tinasFollowers = ['Jake','Vanessa','Alex'];
const mutualFollowers = [];

for (let i = 0; i < bobsFollowers.length; i++) {
  for (let j = 0; j < tinasFollowers.length; j++) {
    if (bobsFollowers[i] === tinasFollowers[j]) {
     mutualFollowers.push(bobsFollowers[i]);
    }
  }
};


// do...while statement practice

let cupsOfSugarNeeded = 3;
let cupsAdded = 0;

//this statement adds a cup of sugar to the recipe until it reaches the # of cupsOfSugarNeeded

do {
  cupsAdded++;
  console.log(cupsAdded + ' cups of sugar were added to the recipe')
} while (cupsAdded < cupsOfSugarNeeded);


//The Break keyword example

const rapperArray = ["Lil' Kim", "Jay-Z", "Notorious B.I.G.", "Tupac"];

//This statement allows the loop to break once it hits 'Notorious B.I.G.', leaving Tupac out when logged

for (let i = 0; i < rapperArray.length; i++){
   console.log(rapperArray[i]);
 if (rapperArray[i] === 'Notorious B.I.G.'){
    break;
  }
}
console.log("And if you don't know, now you know.")


